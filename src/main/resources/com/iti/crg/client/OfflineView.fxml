                        <Insets bottom="20.0" />
                    </VBox.margin></SVGPath>
                <Label styleClass="card-title" text="Play vs Local Player" />
                <Label styleClass="card-subtitle" text="Challenge a friend on the same device." />
            </VBox>
        </HBox>

