<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="250" prefWidth="420" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iti.crg.client.controllers.Game_invitationController">

    <VBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <HBox alignment="CENTER" spacing="10" styleClass="header">
            <Label style="-fx-font-size:18; -fx-font-weight:bold; -fx-text-fill: white;" text="Game Invitation" />
        </HBox>

        <StackPane>
            <Circle radius="40" style="-fx-fill: transparent; -fx-stroke: #e0e0e0; -fx-stroke-width: 5;" />

            <Arc fx:id="timerArc" length="360" radiusX="40" radiusY="40" startAngle="90" style="-fx-fill: transparent; -fx-stroke: #b388ff; -fx-stroke-width: 5;" type="OPEN" />

            <Label fx:id="timerLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #555;" text="20" />
        </StackPane>

        <Label fx:id="invitationLabel" alignment="CENTER" style="-fx-font-size:14; -fx-text-fill: #333;" text="Player X invited you..." wrapText="true">
            <VBox.margin>
                <Insets bottom="5" left="20" right="20" top="5" />
            </VBox.margin>
        </Label>

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#onReject" styleClass="reject-btn" text="Reject" />
            <Button onAction="#onAccept" styleClass="accept-btn" text="Accept" />
        </HBox>

    </VBox>
</AnchorPane>