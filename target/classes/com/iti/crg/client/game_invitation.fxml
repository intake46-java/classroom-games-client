<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="180" prefWidth="420" styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iti.crg.client.controllers.Game_invitationController">

    <VBox spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" alignment="CENTER">

        <!-- Header -->
        <HBox alignment="CENTER" spacing="10" styleClass="header">
            <Label style="-fx-font-size:16; -fx-font-weight:bold;" text="Game Invitation" />
        </HBox>

        <!-- Message -->
        <Label style="-fx-font-size:14;" text="Player X invited you to play Tic Tac Toe" wrapText="true" alignment="CENTER">
            <VBox.margin>
                <Insets bottom="0" left="20" right="20" top="10" />
            </VBox.margin>
        </Label>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button styleClass="accept-btn" text="Accept" />
            <Button styleClass="reject-btn" text="Reject" />
        </HBox>

    </VBox>
</AnchorPane>
