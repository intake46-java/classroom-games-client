<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<AnchorPane prefHeight="550.0" prefWidth="750.0"
            styleClass="main-background"
            stylesheets="@tie.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iti.crg.client.controllers.TieScreenController">
    <children>
        <VBox alignment="CENTER"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">

            <VBox alignment="CENTER" spacing="30.0" styleClass="card">
                <children>
                    <VBox alignment="CENTER" spacing="5.0">
                        <children>
                            <Label text="IT'S A TIE! ðŸ¤" styleClass="header-text"/>
                            <Label text="No winners this time!" styleClass="subheader-text"/>
                        </children>
                    </VBox>

                    <StackPane maxHeight="225.0" maxWidth="400.0"
                               prefHeight="225.0" prefWidth="400.0"
                               styleClass="video-container">
                        <children>
                            <VBox fx:id="placeholderBox" alignment="CENTER" spacing="10.0">
                                <children>
                                    <Label text="â–¶" styleClass="play-icon"/>
                                    <Label text="VIDEO LOADING..." styleClass="loading-text"/>
                                </children>
                            </VBox>
                            <MediaView fx:id="mediaView"
                                      fitHeight="225.0"
                                      fitWidth="400.0"
                                      preserveRatio="true"
                                      visible="false"/>
                        </children>
                    </StackPane>

                    <HBox alignment="CENTER" spacing="20.0">
                        <children>
                            <Button fx:id="playAgainButton"
                                    onAction="#handlePlayAgain"
                                    prefWidth="160.0"
                                    text="Play AGAIN"
                                    styleClass="btn, btn-primary"/>
                            <Button fx:id="backToHomeButton"
                                    onAction="#handleBackToHome"
                                    prefWidth="160.0"
                                    text="BACK TO HOME"
                                    styleClass="btn, btn-secondary"/>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </VBox>
    </children>
</AnchorPane>