<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<?import javafx.scene.canvas.Canvas?>
<StackPane fx:id="root_pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"  stylesheets="@auth.css"
           fx:controller="com.iti.crg.client.controllers.AuthController">
    <VBox id="modal-container">

        <HBox id="header-tabs">
            <Button fx:id="loginTabBtn" onAction="#onLoginTabClick" maxWidth="Infinity" styleClass="tab-button, active-tab" text="Login" HBox.hgrow="ALWAYS" />
            <Button fx:id="registerTabBtn" onAction="#onRegisterTabClick" maxWidth="Infinity" styleClass="tab-button, inactive-tab" text="Register" HBox.hgrow="ALWAYS" />
        </HBox>

        <VBox id="form-content" alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <Label id="title-label" text="Tic-Tac-Toe Online" />

            <VBox spacing="15">
                <TextField fx:id="usernameField" promptText="Username" styleClass="input-field" />

                <StackPane fx:id="passwordContainer" styleClass="password-container">
                    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field, password-field" />
                    <TextField fx:id="passwordTextField" promptText="Password" styleClass="input-field, password-field" visible="false"/>

                    <Button fx:id="eyeButton" onAction="#togglePasswordVisibility" styleClass="eye-button" StackPane.alignment="CENTER_RIGHT">
                        <graphic>
                            <SVGPath content="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-4.01.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z" fill="#9e9e9e" />
                        </graphic>
                        <StackPane.margin>
                            <Insets right="10.0" />
                        </StackPane.margin>
                    </Button>
                </StackPane>
            </VBox>

            <Button fx:id="actionButton" onAction="#handleAuthAction" id="login-button" maxWidth="Infinity" text="Login" />

            <HBox alignment="CENTER" spacing="5.0">
                <Label styleClass="secondary-text" text="Don't have an account?" />
                <Hyperlink styleClass="link-text" text="Register" />
            </HBox>
        </VBox>

        <VBox id="footer" alignment="CENTER">
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
            <Hyperlink styleClass="link-text, footer-link" text="Continue Offline" />
        </VBox>
    </VBox>
</StackPane>